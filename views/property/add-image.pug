

extends ../layouts/admin

block styles 
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name='csrf-token', content=csrfToken)

block content
    div(class='py-10')
        h1(class='text-4xl my-10 font-extrabold text-center') Bienes 
            span(class='font-normal') Raices
        h2(class='text-center text-2xl font-extrabold')= page 


        div(class='bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10')
            form(id='image' action=`/properties/add-image/${property.id}` method='post' class='dropzone border-dashed border-2 w-full min:h-96')
                    input(type='hidden', name='_csrf', value=csrfToken)
                    
            button(
                type='button'
                id='publish'
                class='mt-5 w-full bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded-md cursor-pointer',
            ) Publicar Propiedad


block scripts 
    script(src="/js/add_image.js") 
    