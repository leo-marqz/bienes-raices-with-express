extends ../layouts/main

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content 
    div(class='py-5')
    h1(class='text-4xl my-10 font-extrabold text-center')= property.title

    div 
        a(href="#" class='font-bold text-gray-800 ') Categoria: 
            span(class='font-normal')= property.category.name

    div(class='mt-5 md:flex md:gap-4')
        div(class='md:w-1/3 bg-white shadow rounded-lg')
            img(src=`/uploads/images/${property.image}` alt=`Imagen de la propiedad ${property.image}`)
            
            div(class='px-5 py-10 space-y-5')

                p(class='px-2 rounded-lg bg-gray-100')= property.description

                h2(class='text-2xl leading-6 font-bold text-gray-900') Informacion de Propiedad

                div(class='grid grid-cols-1 md:grid-cols-2 gap-2')
                    p(class='text-gray-600 font-bold text-xs') Ba√±os
                        span(class='text-gray-800 block text-lg')= property.wc

                    p(class='text-gray-600 font-bold text-xs') Habitaciones
                        span(class='text-gray-800 block text-lg')= property.rooms
                    
                    p(class='text-gray-600 font-bold text-xs') Estacionamientos
                        span(class='text-gray-800 block text-lg')= property.parking

                    p(class='text-gray-600 font-bold text-xs') Precio
                        span(class='text-gray-800 block text-lg')= property.price.name

        div(class='md:w-2/3 bg-white rounded-lg shadow')
            h3(class='text-center py-10 leading-6 text-2xl font-bold text-gray-900') Ubicacion 

            div(class='h-96' id='show_map')

            div
                p(id='latitude' class='hidden')= property.latitude 
                p(id='longitude' class='hidden')= property.longitude
            
            div(class='p-5')
                p(class='text-gray-600 font-bold text-xs') Direccion 
                    span(id='street' class='text-gray-800 block text-lg')= property.street

block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/show_map.js")