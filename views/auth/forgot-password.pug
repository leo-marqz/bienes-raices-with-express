
extends ../layouts/index

block content
    div(class='py-10')
        h1(class='text-4xl my-10 font-extrabold text-center') Bienes 
            span(class='font-normal') Raices
        h2(class='text-center text-2xl font-extrabold')= page

        div(class='mt-8 mx-auto max-w-md')
            div(class='bg-white py-8 px-4 shadow')
                form(action="", method="POST", class='space-y-5')
                    input(type='hidden', name='_csrf', value=csrfToken)
                    div
                        label(for='email' class='block text-sm uppercase text-gray-600 mb-2 font-bold') E-mail
                        input(
                            type="email", 
                            name='email', 
                            id='email', 
                            placeholder='Ingresa tu email'
                            class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400',
                        )
                    
                    input(
                        type="submit", 
                        value='Enviar enlace de recuperación', 
                        class='w-full bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded-md cursor-pointer',
                    )

                    div(class='flex items-center justify-center')
                        a(href='/auth/login', class='text-gray-500 text-xs hover:text-gray-700 ') Volver a Inicio sesión
              

